rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Organization branding assets (signatures, logos)
    match /organizations/{orgId}/branding/{fileName} {
      // Anyone can read (needed for certificate generation)
      allow read: if true;
      // Only authenticated users can write, max 2MB, images only
      allow write: if request.auth != null
        && request.resource.size < 2 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null;
    }

    // Organization media assets (reactions, stickers â€” video + image thumbnails)
    match /organizations/{orgId}/media/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024
        && (request.resource.contentType.matches('video/.*')
            || request.resource.contentType.matches('image/.*'));
      allow delete: if request.auth != null;
    }

    // Platform-level built-in stickers (read-only for users)
    match /platform/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
